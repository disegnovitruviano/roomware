#!/bin/bash

# locations of roomware stuff

  ROOMWARE_SERVER_SOURCE_PATH="$ROOMWARE_PATH/src"
  LIB_PATH="$ROOMWARE_PATH/lib"


# build classpath

  unset CLASSPATH
  export CLASSPATH


# Compile all the source files of the RoomWare Server

  ROOMWARE_SERVER_SOURCE_FILES="$ROOMWARE_SERVER_SOURCE_PATH/roomware/*.java"
  if "$JAVAC" -Xlint $ROOMWARE_SERVER_SOURCE_FILES; then : ; else exit; fi;


# Build the jar in the roomware library directory

  JAR_ARGS="-cf $LIB_PATH/RoomWareServer.jar -C $ROOMWARE_SERVER_SOURCE_PATH ."
  "$JAR" $JAR_ARGS
